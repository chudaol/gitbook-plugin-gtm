{
  "name": "gitbook-plugin-gtm",
  "version": "0.0.6",
  "description": "Adds Google Tag Manager code to Gitbook",
  "main": "index.js",
  "keywords": ["GTM", "gitbook"],
  "author": {
    "name": "Olga Filipova",
    "email": "chudaol@gmail.com"
  },
  "repository": {
    "type" : "git",
    "url" : "https://github.com/chudaol/gitbook-plugin-gtm"
  },
  "engines": {
    "gitbook": ">=3.0.0-pre.0"
  },
  "gitbook": {
    "properties": {
      "token": {
        "type": "string",
        "description": "GTM Token",
        "required": true
      },
      "virtualPageViews": {
        "type": "boolean",
        "description": "Add virtual pageview events",
        "required": false
      }
    }
  }
}
